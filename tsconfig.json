{
    "compilerOptions": {
      "allowJs": true,
      "checkJs": true,
      "jsx": "react",
      "module": "esnext",
      "target": "esnext",
      "baseUrl": "./src",
      "paths": {
        "*": ["*"]
      },
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
    },
    
    "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx", "src/**/*.jsx", "src/*.tsx", "src/images/*.png"]
  }
  